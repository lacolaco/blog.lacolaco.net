{
  "name": "blog.lacolaco.net",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:lacolaco/blog.lacolaco.net.git",
  "author": "Suguru Inatomi <suguru.inatomi@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:css && yarn build:js && hugo --minify",
    "build:css": "sass styles.scss -I node_modules | postcss -o static/css/styles.css",
    "build:js": "esbuild main.js --bundle --minify --outfile=static/js/main.js",
    "watch": "yarn watch:js & yarn watch:css & hugo server -D",
    "watch:css": "sass styles.scss assets/css/styles.css --watch -I node_modules --source-map",
    "watch:js": "esbuild main.js --watch --bundle --outfile=assets/js/main.js --sourcemap",
    "copy-vendor": "rsync -r node_modules/katex static/vendor/ && rsync -r node_modules/prismjs static/vendor/",
    "postinstall": "yarn copy-vendor"
  },
  "dependencies": {
    "@primer/css": "16.0.0-rc.33908e1",
    "anchor-js": "4.3.0",
    "katex": "0.13.0",
    "prismjs": "1.23.0"
  },
  "devDependencies": {
    "autoprefixer": "10.2.5",
    "cssnano": "4.1.10",
    "esbuild": "0.9.6",
    "postcss": "8.2.8",
    "postcss-cli": "8.3.1",
    "sass": "1.32.8"
  }
}
