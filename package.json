{
  "name": "blog.lacolaco.net",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:lacolaco/blog.lacolaco.net.git",
  "author": "Suguru Inatomi <suguru.inatomi@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "run-s 'build:css' 'build:js' 'build:hugo'",
    "build:css": "postcss src/styles.css -o assets/css/styles.css",
    "build:js": "esbuild src/main.ts --bundle --minify --outfile=assets/js/main.js",
    "build:hugo": "hugo --minify",
    "start": "yarn watch",
    "watch": "run-p 'watch:*'",
    "watch:css": "postcss src/styles.css -o assets/css/styles.css --watch --map",
    "watch:js": "esbuild src/main.ts --watch --bundle --outfile=assets/js/main.js --sourcemap",
    "watch:hugo": "hugo server -D",
    "copy-vendor": "rsync -r node_modules/katex static/vendor/ && rsync -r node_modules/prismjs static/vendor/",
    "format": "prettier --write 'src' 'tools'",
    "postinstall": "yarn copy-vendor",
    "notion:fetch": "node -r @swc/register tools/notion.ts fetch"
  },
  "dependencies": {
    "@primer/css": "19.8.2",
    "anchor-js": "4.3.1",
    "date-fns": "2.28.0",
    "katex": "0.16.0",
    "prismjs": "1.28.0",
    "rxjs": "7.5.5"
  },
  "devDependencies": {
    "@notionhq/client": "1.0.4",
    "@swc/cli": "0.1.57",
    "@swc/core": "1.2.139",
    "@swc/register": "0.1.10",
    "@types/js-yaml": "4.0.5",
    "@types/prettier": "2.6.3",
    "@types/prismjs": "1.26.0",
    "@types/tailwindcss": "3.0.10",
    "autoprefixer": "10.4.7",
    "commander": "9.3.0",
    "cssnano": "5.1.11",
    "dotenv": "16.0.1",
    "esbuild": "0.14.43",
    "js-yaml": "4.1.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.14",
    "postcss-cli": "9.1.0",
    "postcss-import": "14.1.0",
    "prettier": "2.6.2",
    "tailwindcss": "3.0.24",
    "undici": "5.5.1"
  }
}
