{
  "name": "blog.lacolaco.net",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:lacolaco/blog.lacolaco.net.git",
  "author": "Suguru Inatomi <suguru.inatomi@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:css && hugo --minify",
    "build:css": "sass styles.scss static/css/styles.css -I node_modules --source-map --style compressed",
    "watch": "yarn watch:css & hugo server -D",
    "watch:css": "yarn run build:css --watch",
    "deploy": "yarn build && firebase deploy --only hosting"
  },
  "dependencies": {
    "@primer/css": "15.2.0"
  },
  "devDependencies": {
    "firebase-tools": "7.12.1",
    "sass": "1.25.0"
  }
}
