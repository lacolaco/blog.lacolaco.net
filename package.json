{
  "name": "blog.lacolaco.net",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:lacolaco/blog.lacolaco.net.git",
  "author": "Suguru Inatomi <suguru.inatomi@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "run-s 'build:css' 'build:js' 'build:hugo'",
    "build:css": "sass src/styles.scss -I node_modules | postcss -o assets/css/styles.css",
    "build:js": "esbuild src/main.ts --bundle --minify --outfile=assets/js/main.js",
    "build:hugo": "hugo --minify",
    "start": "yarn watch",
    "watch": "run-p 'watch:*'",
    "watch:css": "sass src/styles.scss assets/css/styles.css --watch -I node_modules --source-map",
    "watch:js": "esbuild src/main.ts --watch --bundle --outfile=assets/js/main.js --sourcemap",
    "watch:hugo": "hugo server -D",
    "copy-vendor": "rsync -r node_modules/katex static/vendor/ && rsync -r node_modules/prismjs static/vendor/",
    "format": "prettier --write 'src' 'tools'",
    "postinstall": "yarn copy-vendor",
    "notion:fetch": "node -r @swc/register tools/notion.ts fetch"
  },
  "dependencies": {
    "@primer/css": "19.2.0",
    "anchor-js": "4.3.1",
    "date-fns": "2.28.0",
    "katex": "0.15.2",
    "prismjs": "1.26.0"
  },
  "devDependencies": {
    "@notionhq/client": "0.4.13",
    "@swc/cli": "0.1.55",
    "@swc/core": "1.2.138",
    "@swc/register": "0.1.10",
    "@types/js-yaml": "4.0.5",
    "@types/prettier": "2.4.4",
    "@types/prismjs": "1.26.0",
    "autoprefixer": "10.4.2",
    "commander": "9.0.0",
    "cssnano": "5.0.17",
    "dotenv": "16.0.0",
    "esbuild": "0.14.21",
    "js-yaml": "4.1.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.6",
    "postcss-cli": "9.1.0",
    "prettier": "2.5.1",
    "sass": "1.49.7",
    "undici": "4.14.1"
  }
}
