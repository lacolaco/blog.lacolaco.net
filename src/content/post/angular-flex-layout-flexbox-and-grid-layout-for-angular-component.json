        },
        {
          "type": "text",
          "text": " and ",
          "annotations": {}
        },
        {
          "type": "text",
          "text": "gdRows",
          "annotations": {
            "code": true
          }
        },
        {
          "type": "text",
          "text": " directives correspond to ",
          "annotations": {}
        },
        {
          "type": "text",
          "text": "grid-template-areas",
          "annotations": {
            "code": true
