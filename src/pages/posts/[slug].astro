---
import { type CollectionEntry, getCollection } from 'astro:content';
import PostDetailPage from 'src/layouts/PostDetailPage.astro';
import BlogPost from '../../layouts/BlogPost.astro';
import { queryAvailablePosts } from '@lib/query';

export async function getStaticPaths() {
  const posts = await queryAvailablePosts();
  return posts.map((entry) => {
    return {
      params: {
        slug: entry.data.slug,
      },
      props: entry,
    };
  });
}
type Props = CollectionEntry<'post'> | CollectionEntry<'postsV2'>;
const entry = Astro.props;
---

{entry.collection === 'post' ? <BlogPost post={entry.data} /> : <PostDetailPage entry={entry} />}
