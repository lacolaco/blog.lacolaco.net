---
import { CalloutNode } from '@lib/post';
import Text from './Text.astro';

type Props = CalloutNode;

const { text } = Astro.props;
---

<div
  class="rounded-md mb-4 p-4 border border-solid border-sky-500 bg-sky-300 bg-opacity-30 flex flex-row space-x-3 items-baseline"
>
  <div class="text-base">{text.map((t) => <Text {...t} />)}</div>
</div>
