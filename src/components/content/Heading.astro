---
import { HeadingNode } from '@lib/post';
import Text from './Text.astro';

type Props = HeadingNode;

const { level, text } = Astro.props;
---

{
  (() => {
    const content = text.map((t) => <Text {...t} />);
    switch (level) {
      case 1:
        return <h1 class="font-bold leading-tight mt-12 mb-2 pb-2 text-2xl border-b-2">{content}</h1>;
      case 2:
        return <h2 class="font-bold leading-tight mt-12 mb-2 pb-2 text-2xl border-b-2">{content}</h2>;
      case 3:
        return <h3 class="font-bold leading-tight mt-8 mb-2 text-xl">{content}</h3>;
      default:
        return null;
    }
  })()
}

