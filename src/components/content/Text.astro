---
import { TextNode } from '@lib/post';
import Katex from './Katex.astro';

type Props = TextNode;

const { text, href, equation, annotations } = Astro.props;

const classList = [
  {
    'font-bold': annotations.bold,
    italic: annotations.italic,
    underline: annotations.underline,
    'line-through': annotations.strikethrough,
  },
];
---

{
  (() => {
    const content = annotations.code ? (
      <code class="px-[0.4em] py-[0.2em] rounded whitespace-break-spaces font-mono text-code-inline text-[0.85em] bg-muted">
        {text}
      </code>
    ) : (
      text.replace(/\n/g, `<br />`)
    );

    if (href) {
      return (
        <a href={href} class:list={classList}>
          {content}
        </a>
      );
    } else if (equation) {
      return (
        <span class:list={classList}>
          <Katex content={`$${text}$`} />
        </span>
      );
    } else {
      return <span class:list={classList} set:html={content} />;
    }
  })()
}

<style>
  a:not([href]) {
    color: inherit;
    text-decoration: none;
  }
</style>
