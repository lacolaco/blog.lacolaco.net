---
import { QuoteNode } from '@lib/post';
import Text from './Text.astro';

type Props = QuoteNode;

const { text } = Astro.props;
---

{
  (() => {
    const content = text.map((t) => <Text {...t} />);
    return <blockquote class="my-2 px-4 text-gray-700 border-l-4 border-l-gray-300">{content}</blockquote>;
  })()
}

<style>
  blockquote > :first-child {
    margin-top: 0;
  }
  blockquote > :last-child {
    margin-bottom: 0;
  }
</style>
