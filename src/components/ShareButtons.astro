---
type Props = {
  title: string;
  url: string;
};

const { title, url } = Astro.props;

const encodedTitle = encodeURIComponent(title);
---

<section class="mt-4 flex flex-wrap justify-between content-center items-center space-x-2 space-y-1">
  <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">
    Tweet
  </a>

  <a
    href="https://b.hatena.ne.jp/entry/"
    class="hatena-bookmark-button"
    data-hatena-bookmark-layout="basic-label-counter"
    data-hatena-bookmark-lang="ja"
    title="このエントリーをはてなブックマークに追加"
  >
    <img
      src="https://b.st-hatena.com/images/v4/public/entry-button/button-only@2x.png"
      alt="このエントリーをはてなブックマークに追加"
      width="20"
      height="20"
      style="border: none;"
    />
  </a>

  <a
    href={`https://misskeyshare.link/share.html?text=${encodedTitle}&url=${url}`}
    target="_blank"
    class="px-2 py-1 text-sm leading-tight font-bold text-white bg-lime-500 rounded-md hover:bg-lime-600"
    >misskeyshare</a
  >

  <a
    href={`https://donshare.net/share.html?text=${encodedTitle}&url=${url}`}
    target="_blank"
    class="px-2 py-1 text-sm leading-tight font-bold text-white bg-blue-500 rounded-md hover:bg-blue-600">donshare</a
  >

  <div class="flex-auto"></div>
  <button
    class="px-2 py-1 text-sm leading-tight bg-default rounded-md border border-solid border-gray-700 hover:bg-muted"
    onclick="window.scrollTo(0, 0);">Scroll to top</button
  >
</section>
