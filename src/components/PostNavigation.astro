---
import type { CollectionEntry } from 'astro:content';
import { getRelativePostUrl } from '../libs/compat';

type Props = {
  prev: CollectionEntry<'postsV2'> | null;
  next: CollectionEntry<'postsV2'> | null;
};

const { prev, next } = Astro.props;

// 前後の記事が両方存在しない場合は何も表示しない
if (!prev && !next) {
  return null;
}
---

<nav class="py-6 my-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
    {
      next ? (
        <a
          href={getRelativePostUrl(next)}
          class="block p-4 md:p-6 rounded-2xl bg-white transition-all duration-300 ease-in-out shadow-[6px_6px_12px_rgba(163,177,198,0.4),-6px_-6px_12px_rgba(255,255,255,0.4)] hover:shadow-[inset_4px_4px_8px_rgba(163,177,198,0.4),inset_-4px_-4px_8px_rgba(255,255,255,0.4)]"
        >
          <div class="text-sm text-muted mb-2">← 次の記事</div>
          <div class="flex items-center gap-2">
            {next.data.icon && <span class="text-xl md:text-2xl">{next.data.icon}</span>}
            <div class="flex-1">
              <div class="font-semibold text-sm md:text-base line-clamp-2">{next.data.title}</div>
            </div>
          </div>
        </a>
      ) : (
        <div />
      )
    }

    {
      prev ? (
        <a
          href={getRelativePostUrl(prev)}
          class="block p-4 md:p-6 rounded-2xl bg-white transition-all duration-300 ease-in-out shadow-[6px_6px_12px_rgba(163,177,198,0.4),-6px_-6px_12px_rgba(255,255,255,0.4)] hover:shadow-[inset_4px_4px_8px_rgba(163,177,198,0.4),inset_-4px_-4px_8px_rgba(255,255,255,0.4)] text-right"
        >
          <div class="text-sm text-muted mb-2">前の記事 →</div>
          <div class="flex items-center gap-2 flex-row-reverse">
            {prev.data.icon && <span class="text-xl md:text-2xl">{prev.data.icon}</span>}
            <div class="flex-1">
              <div class="font-semibold text-sm md:text-base line-clamp-2">{prev.data.title}</div>
            </div>
          </div>
        </a>
      ) : (
        <div />
      )
    }
  </div>
</nav>
