---
type Props = {
  src: string;
};

const { src } = Astro.props;
---

<iframe class="hatenablogcard" src={`https://hatenablog-parts.com/embed?url=${src}`} width="300" height="150"></iframe>

<style>
  iframe {
    border: none;
    width: 100%;
    height: 155px;
    max-width: 680px;
  }
</style>
